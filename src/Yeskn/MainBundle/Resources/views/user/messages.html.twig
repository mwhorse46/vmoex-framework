{% extends '@YesknMain/base.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-envelope fa-fw"></i> {{ app.user.nickname }}的私信
                </div>
                <div class="panel-body">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#receive" data-toggle="tab">我接收的</a>
                        </li>
                        <li><a href="#send" data-toggle="tab">我发出的</a>
                        </li>
                    </ul>

                    <div class="tab-content my-messages">
                        <div class="tab-pane fade in active" id="receive">
                            {% if rMessages is not empty %}
                                <ul class="messages list-group">
                                    {% for message in rMessages %}
                                        <li class="list-group-item {{ message.isRead ? '' : 'list-group-item-warning' }}">
                                            <img src="{{ asset(message.sender.avatar) }}" alt="" width="30" height="30" class="img-rounded">
                                            <a data-pjax href="{{ path('user_home', {username: message.sender.username}) }}">{{ message.sender.nickname }}</a>
                                            {{ message.createdAt|ago }}
                                            对你说：{{ message.content }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <div class="alert alert-warning">
                                    抱歉，暂时没有任何内容！
                                </div>
                            {% endif %}
                        </div>

                        <div class="tab-pane fade" id="send">
                            {% if sMessages is not empty %}
                                <ul class="messages list-group">
                                    {% for message in sMessages %}
                                        <li class="list-group-item">你对<a data-pjax href="{{ path('user_home', {username: message.receiver.username}) }}">{{ message.receiver.nickname }}</a>说：{{ message.content }} <span class="pull-right">{{ message.createdAt|ago }}</span></li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <div class="alert alert-warning">
                                    抱歉，暂时没有任何内容！
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            $.ajax({
                method: "POST",
                url: window.vmoex.links.G_set_message_red_link,
                success: function () {
                    $('li.messages > span.text').text(window.vmoex.trans.message);
                    $('.nav-message-label').removeClass('warning-color');
                }
            });
            $('.navbar-item-message span').addClass('nav-common-dot').removeClass('nav-warn-dot').text(0);
        })
    </script>
{% endblock %}