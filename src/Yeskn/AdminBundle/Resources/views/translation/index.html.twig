{% extends '@YesknAdmin/base.html.twig' %}

{% block header_stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/lib/datatables/media/css/dataTables.bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/lib/eds-ui/dist/css/edsUI.css') }}">
{% endblock %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">翻译管理

                <span class="pull-right">
                <button class="btn btn-success" data-toggle="modal" data-target="#addTranslateModal"><i class="fa fa-plus"></i> 增加</button>
            </span>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>messageId</th>
                    <th>中文简体</th>
                    <th>英文</th>
                    <th>中文繁体</th>
                    <th>日语</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.messageId }}</td>
                        <td>{{ item.chinese }}</td>
                        <td>{{ item.english }}</td>
                        <td>{{ item.japanese }}</td>
                        <td>{{ item.taiwanese }}</td>
                        <td width="115" align="center">
                            <button class="btn btn-xs btn-warning"><i class="fa fa-edit"></i> 编辑</button>
                            <button class="btn btn-xs btn-danger"><i class="fa fa-remove"></i> 删除</button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% include '@YesknAdmin/modals/add-translate-modal.html.twig' with {form: form} %}
{% endblock %}

{% block footer_javascript %}
    <script src="{{ asset('assets/lib/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables/media/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables-responsive/js/dataTables.responsive.js') }}"></script>
    <script src="{{ asset('assets/lib/eds-ui/edsUI.js') }}"></script>

    <script>
        $(document).ready(function() {
            $("[data-toggle=popover]").popover();

            $('#dataTables-example').DataTable({
                responsive: true
            });

            edsUI.form('#addTranslateForm', function (result) {
                if(result.ret) {
                    window.location = '{{ path('admin_translation_index') }}';
                } else {
                    edsUI.mask().alert('result.msg');
                }

                return false;
            }, ['#saveTranslateBtn','text']);
        });
    </script>
{% endblock %}