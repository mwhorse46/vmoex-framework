{% extends '@YesknAdmin/base.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">翻译管理

                <span class="pull-right">
                <button class="btn btn-success" data-toggle="modal" data-target="#entityModal">
                    <i class="fa fa-plus"></i> 增加
                </button>
            </span>
            </h3>
        </div>
    </div>

    {% include 'flash_messages.html.twig' %}

    <div class="row">
        <div class="col-lg-12 table-responsive">
            <table width="100%" class="table table-striped table-hover" style="table-layout: fixed;">
                <thead>
                <tr>
                    <th style="width: 5%">ID</th>
                    <th>messageId</th>
                    <th>中文简体</th>
                    <th>英文</th>
                    <th>中文繁体</th>
                    <th>日语</th>
                    <th style="width: 15%">操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.messageId }}</td>
                        <td>{{ item.chinese }}</td>
                        <td>{{ item.english }}</td>
                        <td>{{ item.japanese }}</td>
                        <td>{{ item.taiwanese }}</td>
                        <td align="center">
                            <div class="btn-group" role="group" aria-label="...">
                                <a data-edit href="{{ path('admin_edit', {entity: 'translation',id: item.id}) }}" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> 编辑</a>
                                <a data-delete href="{{ path('admin_delete', {entity:'translation', id:item.id}) }}" class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i> 删除</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% include '@YesknAdmin/modals/entity-modal.html.twig' with {
        form: form,
        action: path('admin_edit', {entity: 'translation'}),
        title: '增加翻译'
    } %}

{% endblock %}

{% block footer_javascript %}
    {% include '@YesknAdmin/crud/footer-javascript.html.twig' with {
        entity: 'translation'
    } %}
{% endblock %}
