{% form_theme form with [
    'form/vertical-search-field.html.twig',
] %}

<div class="row search-container">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">搜索
                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-default btn-xs btn-dropdown">
                        <i class="fa fa-chevron-up"> </i>
                    </button>
                </div>
            </div>
            {{ form_start(form, {attr: {class: 'search-form'}}) }}
            <div class="panel-body">
                {{ form_widget(form, {attr: {style: "display:flex;flex-wrap:wrap;"}}) }}
            </div>
            <div class="panel-footer">
                <input type="submit" class="btn btn-default" value="搜索">
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
