{% extends '@YesknCommon/base.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">板块列表</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="row">id</th>
                    <th class="row">层级</th>
                    <th class="row">名字</th>
                    <th class="row">别名</th>
                    <th class="row">操作</th>
                </tr>
                </thead>
                <tbody>
                {% for tab in tabs %}
                    <tr role="row">
                        <td>{{ tab.id }}</td>
                        <td>{{ tab.level }}</td>
                        <td><a href="{{ path('home_tab',{tab:tab.alias}) }}">{{ tab.name }}</a></td>
                        <td>{{ tab.alias }}</td>
                        <td>
                            <a href="{{ path('yeskn_admin_tab_edit', {tab:tab.alias}) }}">修改</a>
                            |
                            <a href="{{ path('yeskn_admin_tab_delete', {tab:tab.alias}) }}">删除</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
