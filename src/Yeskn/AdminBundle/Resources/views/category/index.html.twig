{% extends '@YesknAdmin/base.html.twig' %}
{% form_theme form 'form/vertical-field-1.html.twig' %}
{% form_theme form.status 'form/vertical-checkbox-type.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">分类管理

                <span class="pull-right">
                <button class="btn btn-success" data-toggle="modal" data-target="#entityModal"><i class="fa fa-plus"></i> 增加</button>
            </span>
            </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table width="100%" class="table table-striped table-hover" >
                <thead>
                <tr>
                    <th>ID</th>
                    <th>名称</th>
                    <th>别名</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.slug }}</td>
                        <td>{{ item.status ? '启用' : '不启用' }}</td>
                        <td align="center">
                            <div class="btn-group">
                                <a data-edit role="button" class="btn btn-sm btn-warning" href="{{ path('admin_edit', {entity: 'category',id:item.id}) }}"><i class="fa fa-edit"></i> 编辑</a>
                                <a data-delete role="button" class="btn btn-sm btn-danger" href="{{ path('admin_delete',{entity: 'post', id:item.id}) }}"><i class="fa fa-remove"></i> 删除</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% include '@YesknAdmin/modals/entity-modal.html.twig' with {
        form: form,
        action: path('admin_edit', {entity: 'category'}),
        title: '增加分类'
    } %}

{% endblock %}

{% block footer_javascript %}
    {% include '@YesknAdmin/crud/footer-javascript.html.twig' with {
        entity: 'category'
    } %}
{% endblock %}
