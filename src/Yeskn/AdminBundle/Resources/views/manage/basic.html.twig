{% extends '@YesknAdmin/base.html.twig' %}
{% form_theme basicForm 'form/vertical-field-1.html.twig' %}
{% form_theme basicForm.siteAnnounce 'form/vertical-checkbox-type.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">网站管理 - 基本管理</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">网站信息</div>
                <div class="panel-body">
                    {{ form_start(basicForm, {attr: {class: 'form-horizontal'}}) }}
                        <div class="form-group">
                            <label for="siteName" class="col-sm-2 control-label"> 网站名称：</label>
                            <div class="col-sm-9">
                                <input readonly class="form-control" type="text" id="siteName" placeholder="请在翻译管理中搜索'site_name'来修改">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="siteTitle" class="col-sm-2 control-label">网站长标题：</label>
                            <div class="col-sm-9">
                                <input readonly class="form-control" type="text" id="siteTitle" placeholder="请在翻译管理中搜索'site_title'来进行修改">
                            </div>
                        </div>


                    {{ form_widget(basicForm) }}

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">保存</button>
                        </div>
                    </div>

                    {{ form_end(basicForm) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
