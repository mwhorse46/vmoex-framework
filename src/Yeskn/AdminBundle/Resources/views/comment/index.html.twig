{% extends '@YesknAdmin/base.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">评论管理

                <span class="pull-right">
                <button class="btn btn-success" data-toggle="modal" data-target="#entityModal"><i class="fa fa-plus"></i> 增加</button>
            </span>
            </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover" style="table-layout: fixed">
                <thead>
                <tr>
                    <th style="width: 5%">ID</th>
                    <th style="width: 10%">作者</th>
                    <th>内容</th>
                    <th>文章标题</th>
                    <th>发布日期</th>
                    <th width="20%">操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.user.nickname }}</td>
                        <td>{{ item.content|raw }}</td>
                        <td><a href="{{ path('post_show', {id:item.post.id}) }}">{{ item.post.title }}</td>
                        <td>{{ item.createdAt|ago }}</td>
                        <td align="center">
                            <div class="btn-group">
                                <a data-edit role="button" class="btn btn-warning btn-sm" href="{{ path('admin_edit', {entity: 'comment',id:item.id}) }}"><i class="fa fa-edit"></i> 编辑</a>
                                <a data-delete role="button" class="btn btn-danger btn-sm" href="{{ path('admin_delete',{entity: 'comment', id:item.id}) }}"><i class="fa fa-remove"></i> 删除</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% include '@YesknAdmin/modals/entity-modal.html.twig' with {
        form: form,
        action: path('admin_edit', {entity: 'comment'}),
        title: '增加评论'
    } %}

{% endblock %}

{% block footer_javascript %}
    {% include '@YesknAdmin/crud/footer-javascript.html.twig' with {
        entity: 'comment'
    } %}
{% endblock %}
