{% extends '@YesknCommon/base.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">标签列表</h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover">
                <thead>
                   <tr>
                       <th class="row">id</th>
                       <th class="row">名字</th>
                       <th class="row">别名</th>
                       <th class="row">创建时间</th>
                       <th class="row">状态</th>
                       <th class="row">操作</th>
                   </tr>
                </thead>
                <tbody>
                    {% for tag in tags %}
                    <tr role="row">
                        <td>{{ tag.id }}</td>
                        <td>{{ tag.name }}</td>
                        <td>{{ tag.slug }}</td>
                        <td>{{ tag.createdAt|ago }}</td>
                        <td>{{ tag.status }}</td>
                        <td>
                            <a href="{{ path('yeskn_admin_tag_edit', {id:tag.id}) }}">编辑</a>
                            <a href="{{ path('yeskn_admin_tag_delete',{id:tag.id}) }}">删除</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
                </table>
            </div>
            </div>
{% endblock %}
