{% extends '@YesknAdmin/base.html.twig' %}
{% form_theme form 'form/vertical-field-2.html.twig' 'form/vertical-checkbox-type.html.twig' %}

{% block page_wraper %}
    {{ form_start(form, {attr: {class: 'form-horizontal'}}) }}
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">创建新的文章
                    <span class="pull-right">
                        <button type="button" class="btn btn-default"><i class="fa fa-save"></i> 存草稿</button>
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> 发布</button>
                </span>
                </h2>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-9">
                        {{ form_widget(form) }}
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}