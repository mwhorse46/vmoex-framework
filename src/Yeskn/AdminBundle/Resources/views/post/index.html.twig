{% extends '@YesknAdmin/base.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">文章管理

                <span class="pull-right">
                <a href="{{ path('yeskn_admin_post_create') }}" target="_blank" class="btn btn-success btn-sm"><i class="fa fa-plus"></i> 增加</a>
            </span>
            </h3>
        </div>
    </div>

    {% include 'flash_messages.html.twig' %}

    <div class="row">
        <div class="col-lg-12">
            <table width="100%" class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>标题</th>
                    <th>作者</th>
                    <th>发布日期</th>
                    <th>更新日期</th>
                    <th>点击</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td><a href="{{ path('post_show', {id:item.id}) }}">{{ item.title }}</a></td>
                        <td>{{ item.author.username }}</td>
                        <td>{{ item.createdAt|ago }}</td>
                        <td>{{ item.updatedAt|ago }}</td>
                        <td>{{ item.views }}</td>
                        <td>{{ item.status }}</td>
                        <td width="115" align="center">
                            <a role="button" class="btn btn-xs btn-warning" href="{{ path('yeskn_admin_post_edit', {id:item.id}) }}"><i class="fa fa-edit"></i> 编辑</a>
                            <a data-delete role="button" class="btn btn-xs btn-danger" href="{{ path('admin_delete',{entity: 'post', id:item.id}) }}"><i class="fa fa-remove"></i> 删除</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
