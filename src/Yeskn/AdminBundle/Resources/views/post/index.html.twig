{% extends '@YesknAdmin/base.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">文章管理

                <span class="pull-right">
                <a href="{{ path('yeskn_admin_post_create') }}" target="_blank" class="btn btn-success"><i class="fa fa-plus"></i> 增加</a>
            </span>
            </h3>
        </div>
    </div>

    {% include 'flash_messages.html.twig' %}

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover" style="table-layout: fixed">
                <thead>
                <tr>
                    <th style="width: 8%">ID</th>
                    <th style="width: 25%;">标题</th>
                    <th>作者</th>
                    <th>发布日期</th>
                    <th>更新日期</th>
                    <th>点击</th>
                    <th style="width: 8%">状态</th>
                    <th style="width: 20%">操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td><a href="{{ path('post_show', {id:item.id}) }}">{{ item.title }}</a></td>
                        <td>{{ item.author.username }}</td>
                        <td>{{ item.createdAt|ago }}</td>
                        <td>{{ item.updatedAt|ago }}</td>
                        <td>{{ item.views }}</td>
                        <td>{{ item.status }}</td>
                        <td width="115" align="center">
                            <div class="btn-group" role="group" aria-label="...">
                                <a role="button" class="btn btn-warning btn-sm" href="{{ path('yeskn_admin_post_edit', {id:item.id}) }}"><i class="fa fa-edit"></i> 编辑</a>
                                <a data-delete role="button" class="btn btn-danger btn-sm" href="{{ path('admin_delete',{entity: 'post', id:item.id}) }}"><i class="fa fa-trash-o"></i> 删除</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
