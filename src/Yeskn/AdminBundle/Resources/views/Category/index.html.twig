{% extends '@YesknCommon/base.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">分类列表</h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th class="row">id</th>
                        <th class="row">名字</th>
                        <th class="row">别名</th>
                        <th class="row">状态</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cat in categories %}
                        <tr role="row">
                            <td>{{ cat.id }}</td>
                            <td>{{ cat.name }}</td>
                            <td>{{ cat.slug }}</td>
                            <td>{{ cat.status }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}
