{% extends '@YesknCommon/base.html.twig' %}

{% block head_css_link %}
    {{ parent() }}
    <!-- DataTables CSS -->
    <link href="/lib/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
{% endblock %}

{% block page_wraper %}
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">文章列表</h3>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-sm-12">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
            <thead>
            <tr role="row">
                <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="" style="width: 15px;">
                    id
                </th>
                <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 300px;">
                    标题
                </th>
                <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 50px;">
                    作者
                </th>
                <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 150px;">
                    发布日期
                </th>
                <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 150px;">
                    更新日期
                </th>
                <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 50px;">
                    点击
                </th>
                <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width:50px;">
                    状态
                </th>
                <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 121px;">
                    操作
                </th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}

                    <tr class="gradeA odd" role="row">
                        <td class="sorting_1">
                            {{ post.id }}
                        </td>
                        <td>
                            <a href="{{ path('yeskn_blog_show',{"id":post.id}) }}">
                            {{ post.title }}
                            </a>
                        </td>
                        <td>{{ post.author.username }}</td>
                        <td class="center">{{ post.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td class="center">{{ post.updatedAt|date('Y-m-d H:i:s') }}</td>
                        <td class="center">{{ post.views }}</td>
                        <td class="center">{{ post.status }}</td>
                        <td class="center">
                            <a href="{{ path('yeskn_admin_post_edit') }}">编辑</a>
                            <a href="{{ path('yeskn_admin_post_delete',{id:post.id}) }}">删除</a>
                        </td>
                    </tr>

            {% endfor %}
            </tbody>
        </table></div></div>
        <div class="row">
            <div class="col-sm-6">
                <div class="dataTables_info" id="dataTables-example_info" role="status" aria-live="polite">
                    Showing 1 to 10 of 57 entries
                </div>
            </div>
            <div class="col-sm-6">
                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                    <ul class="pagination">
                        <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
                            <a href="#">Previous</a>
                        </li>
                        <li class="paginate_button active" aria-controls="dataTables-example" tabindex="0">
                            <a href="#">1</a>
                        </li>
                        <li class="paginate_button " aria-controls="dataTables-example" tabindex="0">
                            <a href="#">2</a>
                        </li>
                        <li class="paginate_button " aria-controls="dataTables-example" tabindex="0">
                            <a href="#">3</a>
                        </li>
                        <li class="paginate_button " aria-controls="dataTables-example" tabindex="0">
                            <a href="#">4</a>
                        </li>
                        <li class="paginate_button " aria-controls="dataTables-example" tabindex="0">
                            <a href="#">5</a>
                        </li>
                        <li class="paginate_button " aria-controls="dataTables-example" tabindex="0">
                            <a href="#">6</a>
                        </li>
                        <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next">
                            <a href="#">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
{% endblock %}

