{% extends '@YesknAdmin/base.html.twig' %}

{% block header_stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/lib/datatables/media/css/dataTables.bootstrap.min.css') }}">
{% endblock %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">标签管理</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>名字</th>
                    <th>别名</th>
                    <th>创建时间</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.slug }}</td>
                        <td>{{ item.createdAt|ago }}</td>
                        <td>{{ item.status }}</td>
                        <td>
                            <a href="{{ path('admin_tag_index', {id:tag.id}) }}">编辑</a>
                            <a href="{{ path('admin_tag_index',{id:tag.id}) }}">删除</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block footer_javascript %}
    <script src="{{ asset('assets/lib/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables/media/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables-responsive/js/dataTables.responsive.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}