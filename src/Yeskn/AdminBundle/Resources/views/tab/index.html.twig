{% extends '@YesknAdmin/base.html.twig' %}

{% block header_stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/lib/datatables/media/css/dataTables.bootstrap.min.css') }}">
{% endblock %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">板块管理

                <span class="pull-right">
                <button class="btn btn-success"><i class="fa fa-plus"></i> 增加</button>
            </span>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>层级</th>
                    <th>名称</th>
                    <th>别名</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.level }}</td>
                        <td><a href="{{ path('post_list',{tab:item.alias}) }}">{{ item.name }}</a></td>
                        <td>{{ item.alias }}</td>
                        <td>
                            <a href="{{ path('admin_tab_index', {tab:item.alias}) }}">修改</a>
                            |
                            <a href="{{ path('admin_tab_index', {tab:item.alias}) }}">删除</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block footer_javascript %}
    <script src="{{ asset('assets/lib/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables/media/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables-responsive/js/dataTables.responsive.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}