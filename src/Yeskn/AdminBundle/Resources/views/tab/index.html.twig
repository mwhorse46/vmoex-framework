{% extends '@YesknAdmin/base.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">板块管理

                <span class="pull-right">
                <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#entityModal"><i class="fa fa-plus"></i> 增加</button>
            </span>
            </h3>
        </div>
    </div>

    {% include 'flash_messages.html.twig' %}

    <div class="row">
        <div class="col-lg-12">
            <table width="100%" class="table table-striped table-hover" >
                <thead>
                <tr>
                    <th>ID</th>
                    <th>名称</th>
                    <th>图标</th>
                    <th>层级</th>
                    <th>别名</th>
                    <th>描述</th>
                    <th style="width: 15%">操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td><a href="{{ path('post_list',{tab:item.alias}) }}">{{ item.name }}</a></td>
                        <td align="center"><img height="20" width="20" src="{{ asset(item.avatar) }}" alt=""></td>
                        <td>{{ item.level }}</td>
                        <td>{{ item.alias }}</td>
                        <td>{{ item.description }}</td>
                        <td align="center">
                            <div class="btn-group">
                                <a data-edit class="btn btn-warning btn-sm" href="{{ path('admin_edit', {entity: 'tab', id: item.id}) }}"><i class="fa fa-edit"></i> 修改</a>
                                <a data-delete class="btn btn-danger btn-sm" href="{{ path('admin_delete', {entity: 'tab', id: item.id}) }}"><i class="fa fa-remove"></i> 删除</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% include '@YesknAdmin/modals/entity-modal.html.twig' with {
        form: form,
        action: path('admin_edit', {entity: 'tab'}),
        title: '添加板块'
    } %}

{% endblock %}

{% block footer_javascript %}
    {% include '@YesknAdmin/crud/footer-javascript-crud.html.twig' with {
        entity: 'tab'
    } %}
{% endblock %}
