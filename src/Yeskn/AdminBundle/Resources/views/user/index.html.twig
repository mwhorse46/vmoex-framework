{% extends '@YesknAdmin/base.html.twig' %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">用户管理

                <span class="pull-right">
                <button class="btn btn-success" data-toggle="modal" data-target="#entityModal"><i class="fa fa-plus"></i> 增加</button>
            </span>
            </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table width="100%" class="table table-striped table-hover" style="table-layout: fixed">
                <thead>
                <tr>
                    <th style="width: 5%">ID</th>
                    <th>用户名</th>
                    <th>头像</th>
                    <th>昵称</th>
                    <th style="width: 15%">邮箱</th>
                    <th>注册时间</th>
                    <th>金币</th>
                    <th width="20%">操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td><a href="{{ path('member_home', {username:item.username}) }}">{{ item.username }}</a></td>
                        <td align="center"><img width="25" src="{{ asset(item.avatar) }}" alt=""></td>
                        <td>{{ item.nickname }}</td>
                        <td>{{ item.email }}</td>
                        <td>{{ item.registerAt|ago }}</td>
                        <td>{{ item.gold }}</td>
                        <td align="center">
                            <div class="btn-group">
                                <a data-edit role="button" class="btn btn-warning btn-sm" href="{{ path('admin_edit', {entity: 'user', id: item.id}) }}"><i class="fa fa-edit"></i> 编辑</a>
                                <a data-delete role="button" class="btn btn-danger btn-sm" href="{{ path('admin_delete', {entity: 'user', id: item.id}) }}"><i class="fa fa-remove"></i> 删除</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% include '@YesknAdmin/modals/entity-modal.html.twig' with {
        form: form,
        action: path('admin_edit', {entity: 'user'}),
        title: '增加用户'
    } %}

{% endblock %}

{% block footer_javascript %}
    {% include '@YesknAdmin/crud/footer-javascript.html.twig' with {
        entity: 'user'
    } %}
{% endblock %}
