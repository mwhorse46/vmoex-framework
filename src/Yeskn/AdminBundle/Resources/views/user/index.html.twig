{% extends '@YesknAdmin/base.html.twig' %}

{% block header_stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/lib/datatables/media/css/dataTables.bootstrap.min.css') }}">
{% endblock %}

{% block page_wraper %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">用户管理

                <span class="pull-right">
                <button class="btn btn-success"><i class="fa fa-plus"></i> 增加</button>
            </span>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>用户名</th>
                    <th>头像</th>
                    <th>昵称</th>
                    <th>邮箱</th>
                    <th>登陆时间</th>
                    <th>注册时间</th>
                    <th>签名</th>
                    <th>金币</th>
                    <th>角色</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.username }}</td>
                        <td align="center"><img width="25" src="{{ item.avatar }}" alt=""></td>
                        <td>{{ item.nickname }}</td>
                        <td>{{ item.email }}</td>
                        <td>{{ item.loginAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ item.registerAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ item.remark }}</td>
                        <td>{{ item.gold }}</td>
                        <td>{{ item.role }}</td>
                        <td width="115" align="center">
                            <a role="button" class="btn btn-xs btn-warning" href="/"><i class="fa fa-edit"></i> 编辑</a>
                            <a role="button" class="btn btn-xs btn-danger" href="/"><i class="fa fa-remove"></i> 删除</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block footer_javascript %}
    <script src="{{ asset('assets/lib/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables/media/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/lib/datatables-responsive/js/dataTables.responsive.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}