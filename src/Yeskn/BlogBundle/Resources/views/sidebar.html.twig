<div class="col-lg-4">
    {% if sidebar_head is not empty %}
        {{ sidebar_head|raw }}
    {% endif %}
    <div class="panel panel-default">
        <div class="panel-heading">
            标签云
            <div class="btn-group pull-right">
                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown"
                        aria-expanded="false">
                    <i class="fa fa-chevron-down"></i>
                </button>
                <ul class="dropdown-menu slidedown">
                    <li>
                        <a href="#">
                            <i class="fa fa-refresh fa-fw"></i> 换一批
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-check-circle fa-fw"></i> 标签云
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="panel-body hot-tags">
            {% for tag in hotTags() %}
                <a href="">{{ tag.name }}</a>
            {% endfor %}
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            最新发布
        </div>
        <div class="panel-body latest-posts">
            <ul>
                {% for post in hotPosts() %}
                    <li><a data-pjax href="{{ path('yeskn_blog_show' , {'id' : post.id}) }}">
                            {{ post.title }}
                        </a></li>
                {% endfor %}
            </ul>
        </div>

    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            最新评论
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <ul class="chat">
            {% for comment in hotComments() %}
                <li class="left clearfix">
                    <span class="chat-img pull-left">
                        <img src="{{ comment.user.avatar }}" alt="User Avatar" class="img-circle" width="50" height="50">
                    </span>
                    <div class="chat-body clearfix">
                        <div class="header">
                            <strong class="primary-font"><a href="{{ path('user_home', {username: comment.user.username}) }}" data-pjax>{{ comment.user.nickname }}</a></strong>
                            <small class="pull-right text-muted">
                                <i class="fa fa-clock-o fa-fw"></i> {{ comment.createdAt|date('Y-m-d H:i:s') }}
                            </small>
                        </div>
                        <p>{{ comment.content|raw }}</p>
                    </div>
                </li>
            {% endfor %}
            </ul>
        </div>
        <!-- /.panel-body -->
    </div>
</div>