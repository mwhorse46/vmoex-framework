{% block checkbox_widget %}
    {% spaceless %}
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input {% if data == 1 %}checked{% endif %} type="checkbox" {{ block('widget_attributes') }}> {{ label }}
                </label>
            </div>
        </div>
    {% endspaceless %}
{% endblock checkbox_widget %}