{% block image_input_widget %}
    {% spaceless %}
        {% if data %}
            <img src="{{ asset(data.path ~ '/' ~ data.fileName) }}" alt="" style="padding: 10px">
        {% endif %}
        {{ form_widget(form, {attr: {class: 'form-control'}}) }}
        {{ form_errors(form) }}
    {% endspaceless %}
{% endblock image_input_widget %}