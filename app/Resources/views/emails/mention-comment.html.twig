{% extends 'emails/base.html.twig' %}

{% block email_title %}
    {{ 'site_name'|trans }} 有人在评论中提到了您
{% endblock %}

{% block email_content %}
    <div style="padding-bottom: 10px">
        <img src="{{ absolute_url(asset(notice.createdBy.avatar)) }}" alt="" width="30" height="30" style="border-radius: 3px">
        <a data-pjax href="{{ url('member_home', {username: notice.createdBy.username}) }}">{{ notice.createdBy.nickname }}</a>
        {{ notice.createdAt|ago }} {{ 'notice_comment_mention_you'|trans }} <a data-pjax href="{{ url('post_show', {id: notice.object.id}) }}">{{ notice.object.title }}</a>:
    </div>

    <div >
        <blockquote class="home-bq">
            {{ notice.rowContent|raw }}
        </blockquote>
    </div>
{% endblock %}
